<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp"
    android:layout_margin="@dimen/_2sdp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title : "
        android:textSize="@dimen/_20sdp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Title ">

        <EditText
            android:id="@+id/me_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:padding="@dimen/_2sdp"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor's Consultancy Fee: "
            android:textSize="@dimen/_20sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Doctor's fee ">

            <EditText
                android:id="@+id/me_dialog_docfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transportation Charges : "
            android:textSize="@dimen/_20sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Transportation charges">

            <EditText
                android:id="@+id/me_dialog_trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicines cost : "
            android:textSize="@dimen/_20sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicines Cost">

            <EditText
                android:id="@+id/me_dialog_medcost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>
<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Other Expenses : "
    android:textSize="@dimen/_20sdp"
    />
<com.google.android.material.textfield.TextInputLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Other Expenses">

<EditText
    android:id="@+id/me_dialog_others"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="@dimen/_20sdp"
    android:padding="@dimen/_2sdp"
    android:inputType="number"
    />

</com.google.android.material.textfield.TextInputLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_4sdp"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/me_dialog_cancel"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/_20sdp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/me_dialog_save"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/_20sdp"
        />
</RelativeLayout>
</LinearLayout>