<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp"
    android:layout_margin="@dimen/_2sdp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title : "
            android:textSize="@dimen/_14sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:hint="Enter your Title ">

            <EditText
                android:id="@+id/me_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_2sdp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor's Consultancy Fee: "
            android:textSize="@dimen/_14sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:hint="Enter Doctor's fee ">

            <EditText
                android:id="@+id/me_dialog_docfee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transportation Charges : "
            android:textSize="@dimen/_14sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:hint="Enter Transportation charges">

            <EditText
                android:id="@+id/me_dialog_trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicines cost : "
            android:textSize="@dimen/_14sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:hint="Medicines Cost">

            <EditText
                android:id="@+id/me_dialog_medcost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Expenses : "
            android:textSize="@dimen/_14sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:hint="Other Expenses">
            <EditText
                android:id="@+id/me_dialog_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_2sdp"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/me_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"
            app:cornerRadius="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            />

        <Button
            android:id="@+id/me_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:textSize="@dimen/_14sdp"
            app:cornerRadius="@dimen/_5sdp"
            />
    </LinearLayout>
</LinearLayout>