<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:padding="1dp"
         android:id="@+id/tyh_top_ll"
         >

          <EditText
              android:layout_width="wrap_content"
              android:drawableLeft="@drawable/search_icon"
              android:drawablePadding="2dp"
              android:layout_height="wrap_content"
              android:id="@+id/tyh_search"
              android:textSize="20sp"
              android:layout_weight="1"
              android:hint="Search Here"
              android:layout_margin="2dp"
              android:layout_marginLeft="3dp"
              />
          <ImageView
              android:id="@+id/tyh_sort"
              android:layout_margin="3dp"
              android:layout_width="60dp"
              android:layout_height="50dp"
              android:src="@drawable/sort_image" />
     </LinearLayout>
     
     <androidx.recyclerview.widget.RecyclerView
         android:layout_below="@+id/tyh_top_ll"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/tyh_main_rv"
           />
     <com.google.android.material.floatingactionbutton.FloatingActionButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/tyh_add"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:id="@+id/tyh_main_floatbtn"
         android:layout_marginBottom="20dp"
         android:layout_marginRight="20dp"
         android:contentDescription="+"
      />
</RelativeLayout>