<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        >
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Chemical Name :"
            android:textSize="@dimen/_14sdp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:hint="Chemical Name ">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/ml_edit_cn"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Medicines :"
            android:textSize="@dimen/_14sdp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:hint="Medicines">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/ml_edit_med"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Chemical Formula :"
            android:textSize="@dimen/_14sdp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:hint="Chemical Formula">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/ml_edit_cf"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/ml_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:padding="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                app:cornerRadius="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"/>
            <Button
                android:id="@+id/ml_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_14sdp"
                app:cornerRadius="@dimen/_5sdp"/>
        </LinearLayout>
</LinearLayout>