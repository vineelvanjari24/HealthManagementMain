<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/userHealthScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorList.DoctorDetailsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:gravity="center"
        >
        <include layout="@layout/toolbar_drawable_layout"
            android:id="@+id/toolbar"
            />
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/dialogbox_border"
            android:src="@drawable/doctor"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:columnCount="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textAllCaps="true"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                />
            <TextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vignesh"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="specification in"
                android:textAllCaps="true"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                />


            <TextView
                android:id="@+id/specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologists"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPERIENCE"
                android:textAllCaps="true"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                />


            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="@dimen/_14sdp" />
        </GridLayout>
        <TextView
            android:id="@+id/descriptionUserHealthTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionTextInputLayout"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:hint="Description"
            >
            <EditText
                android:id="@+id/doctorDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/goToWebsite"
            android:layout_height="@dimen/_50sdp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/_10sdp"
            app:cornerRadius="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="go to website"
            />
    </LinearLayout>
</ScrollView>
